{
  "name": "harvestpilot",
  "version": "0.1.0",
  "private": true,
  "description": "Plataforma de Gestão de Parcelas & Calendário Agrícola",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=@harvestpilot/backend",
    "dev:frontend": "npm run dev --workspace=@harvestpilot/frontend",
    "dev:desktop": "tauri dev",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=apps/backend",
    "build:frontend": "npm run build --workspace=apps/frontend",
    "build:desktop": "tauri build",
    "test": "npm run test --workspaces",
    "test:production": "npx playwright test --reporter=list",
    "lint": "npm run lint --workspaces",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "npm run migrate:dev --workspace=apps/backend",
    "db:studio": "npm run db:studio --workspace=apps/backend"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.6.1",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
